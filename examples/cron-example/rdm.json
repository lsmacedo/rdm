{
  "name": "CRON Example",
  "description": "This is a sample JSON dataset of songs that may have multiple artists. This data will be refetched every 10 seconds.",
  "source": "https://github.com/lsmacedo/rdm",
  "cron": "*/10 * * * * *",
  "input": {
    "file": {
      "path": "tracks.json"
    }
  },
  "output": {
    "alias": {
      "$track": "_.tracks__",
      "$artist": "_.tracks__artists__"
    },
    "database": {
      "url": "postgres://postgres:postgrespassword@localhost/spotifyt",
      "tables": {
        "track": {
          "set": {
            "name": "$track.name",
            "isrc": "$track.isrc"
          },
          "strategy": "upsert",
          "uniqueConstraint": ["isrc"]
        },
        "artist": {
          "set": {
            "name": "$artist.name"
          },
          "strategy": "upsert",
          "uniqueConstraint": ["name"]
        },
        "artist_track": {
          "set": {
            "artist_id": "artist.id",
            "track_id": "track.id"
          },
          "strategy": "upsert",
          "uniqueConstraint": ["artist_id", "track_id"]
        }
      }
    }
  }
}
